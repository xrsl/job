        "url": {
          "type": "string"
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "enabled": {
          "type": "boolean"
        },
        "extra-keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "company",
        "url"
      ],
      "x-tombi-table-keys-order": "schema"
    },
    "#JobSearch": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "in": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/#CareerPage"
          }
        }
      },
      "x-tombi-table-keys-order": "schema"
    }
  },
  "type": "object",
  "properties": {
    "job": {
      "type": "object",
